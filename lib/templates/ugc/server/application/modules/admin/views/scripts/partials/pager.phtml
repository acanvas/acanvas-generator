?>
<?php if ($this->pageCount && $this->pageCount > 1) :?>
    <div class="pagination pagination-left" style="width:300px;">
        <ul>
            <li<?= (isset($this->previous) ? '' : ' class="disabled"'); ?>><a href="<?= (isset($this->previous) ? '?page='.$this->previous : ''); ?>">&#171;</a></li>    
            <? foreach ($this->pagesInRange as $page): ?>
                <li<?= ($page == $this->current) ? ' class="disabled"' : ''; ?>><a href="?page=<?= $page; ?>"><?= $page; ?></a></li>
            <? endforeach; ?>
            <li<?= (isset($this->next) ? '' : ' class="disabled"'); ?>><a href="<?= (isset($this->next) ? '?page='.$this->next : ''); ?>">&#187;</a></li>
        </ul>
    </div>
<? endif; ?>